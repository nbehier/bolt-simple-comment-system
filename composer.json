{
    "name": "leskis/bolt-simple-comment-system",
    "description": "Bolt extension to add a simple local comment system",
    "type": "bolt-extension",
    "keywords": [
        "comments"
    ],
    "require": {
        "bolt/bolt": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolas Béhier-Dévigne",
            "homepage": "https://leskis.net",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Bolt\\Extension\\Leskis\\BoltSimpleCommentSystem\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bolt\\Extension\\Leskis\\BoltSimpleCommentSystem\\Tests\\": "tests",
            "Bolt\\Tests\\": "vendor/bolt/bolt/tests/phpunit/unit/"
        }
    },
    "extra": {
        "bolt-assets": "web",
        "bolt-class": "Bolt\\Extension\\Leskis\\BoltSimpleCommentSystem\\BoltSimpleCommentSystemExtension"
    }
}
