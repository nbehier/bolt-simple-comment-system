{% set extension_config = app['bolt-simple-comment.config'] %}
<div id="bscsFormContainer">
    <h4>Create a new reply</h4>
    {{ form_start(form) }}
        {{ form_row(form.body) }}
        <br>
        {{ form_widget(form.notify) }}
        {{ form_label(form.notify) }}
        <br>
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        <br>
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        <br>
        {{ form_widget(form.linked_entity) }}
        {{ form_row(form.post) }}
    {{ form_end(form) }}
    {#
    <form action="/bscs-ajax" id="bscsForm" type="POST">
        <textarea name="body"></textarea>
        <input type="text" name="name"/>
        <input type="text" name="email"/>
        <input type="hidden" name="linked_entity" value="{{ slug }}" />
        <input type="submit" value="envoyer"/>
    </form>
    #}
</div>
<script>
    $( function() {
        $( "#bscsForm" ).jqSimpleCommentsSystem({
            propertyName: "#element"
        });
    } );
</script>
